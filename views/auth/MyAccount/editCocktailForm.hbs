<div class="background-details background-details-info mycocktails-form" >
  <div>
    <h2 id="cocktail-name">Edit cocktail:</h2>
  </div>
  <div>
    <form action="/myaccount/mycocktails/details/{{cocktail.id}}/edit" method="POST">
      <br>
      <div class="basic-info">
        <div>
          <label for="strDrink">Name: </label>
          <input type="text" name="strDrink" id="strDrink" value="{{cocktail.strDrink}}">
        </div>
        <div>
          <label for="strCategory">Category: </label>
          <select name="strCategory" id="strCategory" value="{{cocktail.strCategory}}">
            <option value="0" selected>Seleccione...
            <option value="1">Beer
            <option value="2">Cocktail
            <option value="3">Cocoa
            <option value="4">Coffee / Tea
            <option value="5">Homemade Liqueur
            <option value="6">Milk / Float / Shake
